@model List<CRUD.Models.Domain.Employee>
@{
}
<h1>Employee</h1>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Department</th>
			<th>Date of Birth</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.Salary</td>
				<td>@employee.Department</td>
				<td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
				<td>
					<a href="Employee/View/@employee.Id">View</a>
				</td>

			</tr>
		}
	</tbody>
</table>